@model IEnumerable<E_Commerce_Simple.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex">
    <a asp-action="Create" asp-controller="Products" class="btn btn-primary">Add product</a>
</div>

<div class="table-responsive pt-3">
    <table class="table text-start align-middle table-bordered table-hover mb-0">
        <thead>
            <tr class="text-dark">
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>
                        <img src="@product.Image" alt="@product.Name" width="150" height="150" />
                    </td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Category?.Name</td>
                    <td>@product.CreatedAt.ToString("MMMM dd, yyyy")</td>
                    <td>@product.UpdatedAt.ToString("MMMM dd, yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@product.Id">Detail</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
