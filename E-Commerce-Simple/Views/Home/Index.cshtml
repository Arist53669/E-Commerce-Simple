@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<h3>New products</h3>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 gy-3">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card w-100 my-2 shadow-2-strong">
                <a asp-action="Detail" asp-controller="Products" asp-route-id="@product.Id">
                    <img src="@product.Image" alt="@product.Name" class="card-img-top" style="aspect-ratio: 1 / 1">
                </a>
                <div class="card-body d-flex flex-column">
                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id" class="product text-decoration-none">
                        <h5 class="card-title">@product.Name</h5>
                        <p>@product.Price.ToString("C")</p>
                    </a>
                    <div class="card-footer bg-white d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@product.Id" asp-route-qty="1" class="btn btn-primary shadow-0 me-1">Add to cart</a>
                        <button class="btn btn-light border px-2 pt-2 icon-hover">
                            <i class="fas fa-heart fa-lg text-secondary px-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a asp-action="Index" asp-controller="Products">View all</a>
</div>